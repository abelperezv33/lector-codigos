      display: none;
    }
    #output {
      margin-top: 20px;
      max-width: 400px;
      width: 100%;
    }
    #output ul {
      list-style-type: none;
      padding: 0;
    }
    #output li {
      margin-bottom: 5px;
    }
    footer {
