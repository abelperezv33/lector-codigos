<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Lector de CÃ³digos de Barra</title>
  <style>
    body, html {
      margin: 0;
      padding: 0;
      overflow: hidden;
    }
    #video {
      width: 100vw;
      height: 100vh;
      object-fit: cover;
      position: fixed;
      top: 0;
      left: 0;
      z-index: 1;
    }
    #overlay {
      position: fixed;
      top: 10px;
      left: 10px;
      z-index: 2;
      background: rgba(255, 255, 255, 0.8);
      padding: 10px;
      border-radius: 5px;
    }
    #codes {
      max-height: 200px;
      overflow-y: auto;
      margin-top: 10px;
    }
    button {
      margin-right: 5px;
    }
  </style>
</head>
<body>
  <video id="video" autoplay></video>
  <div id="overlay">
    <div>
      <button onclick="clearCodes()">Borrar</button>
      <button onclick="downloadCodes()">Exportar</button>
    </div>
    <div id="codes"></div>
  </div>
  
  <script type="module">
    import QrScanner from 'https://cdn.jsdelivr.net/npm/qr-scanner@1.4.2/qr-scanner.min.js';

    const video = document.getElementById('video');
    const codesDiv = document.getElementById('codes');
    let scannedCodes = new Set();

    const qrScanner = new QrScanner(video, result => {
      if (!scannedCodes.has(result)) {
        scannedCodes.add(result);
        const div = document.createElement('div');
        div.textContent = result;
        codesDiv.appendChild(div);
      }
    }, {
      highlightScanRegion: true,
      highlightCodeOutline: true,
      returnDetailedScanResult: true,
      preferredCamera: 'environment'
    });

    QrScanner.listCameras(true).then(cameras => {
      if (cameras.length > 0) {
        qrScanner.setCamera(cameras[0].id);
        qrScanner.start();
      }
    });

    window.clearCodes = () => {
      scannedCodes.clear();
      codesDiv.innerHTML = '';
    };

    window.downloadCodes = () => {
      const blob = new Blob([Array.from(scannedCodes).join('\n')], { type: 'text/plain' });
      const url = URL.createObjectURL(blob);
      const a = document.createElement('a');
      a.href = url;
      a.download = 'codigos.txt';
      a.click();
      URL.revokeObjectURL(url);
    };
  </script>
</body>
</html>
